<Page x:Class="DeleteNewline.Page_Setting"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page_Setting"
      KeyboardNavigation.TabNavigation="None">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical" Margin="40,30,0,0">
                <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" ToolTip="{StaticResource toolTipText_topMost}"
                            Margin="{StaticResource margin_stackPanel}" Width="{StaticResource width_stackPanel}">
                    <Label Content="TopMost" VerticalAlignment="Top" Width="{StaticResource width_label}" Margin="{StaticResource margin_label}" />
                    <CheckBox Name="CheckBox_topMost" VerticalAlignment="Top"
                              Margin="{StaticResource margin_checkBox}" Width="{StaticResource width_checkBox}" Height="{StaticResource height_checkBox}" 
                              MinHeight="{StaticResource minHeight_checkBox}" MinWidth="{StaticResource minWidth_checkBox}"
                                IsChecked="{Binding isChecked_checkBox_topMost}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" ToolTip="{StaticResource toolTipText_notification}"
                            Margin="{StaticResource margin_stackPanel}" Width="{StaticResource width_stackPanel}">
                    <Label Content="Notification" VerticalAlignment="Top" Width="{StaticResource width_label}" Margin="{StaticResource margin_label}" />
                    <CheckBox Name="CheckBox_notification" VerticalAlignment="Top"  
                              Margin="{StaticResource margin_checkBox}" Width="{StaticResource width_checkBox}" Height="{StaticResource height_checkBox}" 
                              MinHeight="{StaticResource minHeight_checkBox}" MinWidth="{StaticResource minWidth_checkBox}"
                                IsChecked="{Binding isChecked_checkBox_notification}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" ToolTip="{StaticResource toolTipText_deleteMultipleSpace}"
                            Margin="{StaticResource margin_stackPanel}" Width="{StaticResource width_stackPanel}">
                    <Label Content="Delete Multiple Space" VerticalAlignment="Top" Width="{StaticResource width_label}" Margin="{StaticResource margin_label}" />
                    <CheckBox Name="CheckBox_deleteMultipleSpace" VerticalAlignment="Top" 
                              Margin="{StaticResource margin_checkBox}" Width="{StaticResource width_checkBox}" Height="{StaticResource height_checkBox}" 
                              MinHeight="{StaticResource minHeight_checkBox}" MinWidth="{StaticResource minWidth_checkBox}"
                                IsChecked="{Binding isChecked_checkBox_deleteMultipleSpace}"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="30,30,0,0">
                <StackPanel VerticalAlignment="Top" Orientation="Horizontal"  Margin="{StaticResource margin_stackPanel}" ToolTip="{StaticResource toolTipText_keyBind}">
                    <Label Content="Keybind" VerticalAlignment="Top" Margin="{StaticResource margin_label}"/>
                    <TextBox x:Name="TextBox_bindKey" Margin="40,0,0,0" Width="150" Height="20" VerticalAlignment="Top" IsReadOnly="True"
                         KeyDown="TextBox_bindKey_KeyDown" KeyUp="TextBox_bindKey_KeyUp" GotFocus="TextBox_bindKey_GotFocus" 
                             Text="{Binding text_textBox_keybind}" LostFocus="TextBox_bindKey_LostFocus"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <Label x:Name="TextBox_version" FontSize="11" Content="Delete Newline 1.2.7" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20"/>
    </Grid>
</Page>
