<Page x:Class="DeleteNewline.Page_Setting"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
      
      xmlns:local="clr-namespace:DeleteNewline"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page_Setting"
      KeyboardNavigation.TabNavigation="None">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical" Margin="40,30,0,0">
                <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top"
                            Margin="{StaticResource margin_stackPanel}" Width="{StaticResource width_stackPanel}">
                    <Label Content="TopMost" VerticalAlignment="Top" Width="{StaticResource width_label}" Margin="{StaticResource margin_label}" />
                    <CheckBox Name="CheckBox_topMost" VerticalAlignment="Top"
                              Margin="{StaticResource margin_checkBox}" Width="{StaticResource width_checkBox}" Height="{StaticResource height_checkBox}" 
                              MinHeight="{StaticResource minHeight_checkBox}" MinWidth="{StaticResource minWidth_checkBox}"
                                IsChecked="{Binding isChecked_checkBox_topMost}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top"
                            Margin="{StaticResource margin_stackPanel}" Width="{StaticResource width_stackPanel}">
                    <Label Content="Notification" VerticalAlignment="Top" Width="{StaticResource width_label}" Margin="{StaticResource margin_label}" />
                    <CheckBox Name="CheckBox_notification" VerticalAlignment="Top"  
                              Margin="{StaticResource margin_checkBox}" Width="{StaticResource width_checkBox}" Height="{StaticResource height_checkBox}" 
                              MinHeight="{StaticResource minHeight_checkBox}" MinWidth="{StaticResource minWidth_checkBox}"
                                IsChecked="{Binding isChecked_checkBox_notification}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" 
                            Margin="{StaticResource margin_stackPanel}" Width="{StaticResource width_stackPanel}">
                    <Label Content="Delete Multiple Space" VerticalAlignment="Top" Width="{StaticResource width_label}" Margin="{StaticResource margin_label}" />
                    <CheckBox Name="CheckBox_deleteMultipleSpace" VerticalAlignment="Top" 
                              Margin="{StaticResource margin_checkBox}" IsChecked="{Binding _ischecked_checkBox_deleteMultipleSpace}" 
                              Width="{StaticResource width_checkBox}" Height="{StaticResource height_checkBox}" 
                              MinHeight="{StaticResource minHeight_checkBox}" MinWidth="{StaticResource minWidth_checkBox}"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="0,30,0,0">
                <StackPanel VerticalAlignment="Top" Orientation="Horizontal"  Margin="{StaticResource margin_stackPanel}">
                    <Label Content="Keybind" VerticalAlignment="Top" Margin="{StaticResource margin_label}"/>
                    <TextBox x:Name="TextBox_bindKey" Margin="40,0,0,0" Width="175" Height="20" VerticalAlignment="Top" IsReadOnly="True"
                         KeyDown="TextBox_bindKey_KeyDown" KeyUp="TextBox_bindKey_KeyUp" GotFocus="TextBox_bindKey_GotFocus" 
                             Text="{Binding content_textBox_keybind}" LostFocus="TextBox_bindKey_LostFocus">
                        <i:Interaction.Trigger></i:Interaction.Trigger>
                    </TextBox>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
